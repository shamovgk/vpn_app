PORT=3000
DB_PATH=./vpn.db

# Секрет для express-session
SESSION_SECRET=Случайный_секрет_сюда

# SMTP для отправки email (например, gmail или yandex, или любой другой smtp relay)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=UgbuganSoft@gmail.com
SMTP_PASS=Пароль_почты

# YooKassa настройки
YOOKASSA_SHOPID=твой_shop_id
YOOKASSA_SECRETKEY=твой_секретный_ключ

# WireGuard серверные данные (обязательно!)
WG_SERVER_PUBKEY=PASTE_YOUR_SERVER_PUBLIC_KEY
WG_ENDPOINT=твое_доменное_имя_или_ip:51820
WG_DNS=1.1.1.1

# Пути к скриптам, если не стандартные
WG_CONF_PATH=/etc/wireguard/wg0.conf
GENERATE_VPN_KEY_SCRIPT=/absolute/path/to/scripts/generate_vpn_key.sh
ADD_TO_WG_CONF_SCRIPT=/absolute/path/to/scripts/add_to_wg_conf.sh

# CORS (разрешенные адреса, через запятую если их несколько)
CORS_ORIGIN=https://your-app.com

# Опционально (если потребуется)
VPN_NETWORK=10.0.0.0/24